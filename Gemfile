source "https://rubygems.org"

# Jekyll and Minimal Mistakes theme
gem "jekyll", "~> 4.3"  # Ensure you're on Jekyll 4
gem "minimal-mistakes-jekyll"

# Plugins recommended for GitHub Pages compatibility
gem "jekyll-feed"        # For RSS feed generation
gem "jekyll-sitemap"     # Generates a sitemap.xml
gem "jekyll-seo-tag"     # Improves SEO with metadata tags
gem "jekyll-include-cache" # Optimizes repeated includes (needed for Minimal Mistakes)
gem "jekyll-archives"    # Adds support for archive pages (if needed)

# Development dependencies
group :jekyll_plugins do
  gem "webrick" # Required for `jekyll serve` on newer Ruby versions
end
